<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.erze.yqj.moudle.Login.LoginActivity">
    <include
        layout="@layout/common_title"/>
    <RelativeLayout
        android:background="#EDEDED"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/ll"
           android:layout_marginTop="90px"
           android:layout_width="956px"
           android:layout_height="240px"
           android:orientation="vertical"
           android:layout_centerHorizontal="true"
           >
          <RelativeLayout
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="130px">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="57px"
                    android:layout_height="57px"
                    android:src="@mipmap/login1"
                      android:layout_centerVertical="true"
                    android:layout_marginLeft="43px"
                    />
            <EditText
                android:id="@+id/phone_et"
                android:maxLength="11"
                android:cursorVisible="true"
                android:layout_toRightOf="@+id/iv1"
                android:layout_marginLeft="37px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号码，暂时只支持中国大陆"
                android:textSize="35px"
                android:textColor="#000"
                android:layout_centerVertical="true"
                />
            
          </RelativeLayout>
           <RelativeLayout
               android:id="@+id/rl2"
               android:layout_marginTop="3px"
               android:background="#fff"
               android:layout_width="match_parent"
               android:layout_height="130px">
               <ImageView
                   android:id="@+id/iv2"
                   android:layout_width="57px"
                   android:layout_height="57px"
                   android:src="@mipmap/login2"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="43px"
                   />
               <EditText
                   android:id="@+id/Yzm_et"
                   android:digits="1234567890"
                   android:maxLength="4"
                   android:cursorVisible="true"
                   android:layout_toRightOf="@+id/iv2"
                   android:layout_toLeftOf="@+id/btn_send_msg"
                   android:layout_marginLeft="37px"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@null"
                   android:hint="请输入验证码（4位数字）"
                   android:textSize="35px"
                   android:textColor="#000"
                   android:layout_centerVertical="true"
                   />
                <RelativeLayout
                    android:id="@+id/btn_send_msg"
                    android:background="@drawable/bg"
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:layout_width="5px"
                        android:layout_height="85px"
                        android:background="#EDEDED"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/yzm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="发送验证码"
                        android:textSize="30px"
                        android:gravity="center_horizontal"
                        android:textColor="#78B3F7"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>
           </RelativeLayout>

       </LinearLayout>
