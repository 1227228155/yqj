<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.erze.yqj.moudle.user.ServiceActivity">
    <include layout="@layout/common_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800px">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="300px"
            android:layout_height="300px"
            android:scaleType="fitXY"
            android:src="@mipmap/kefu"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_below="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服点击下面"
            android:layout_centerHorizontal="true"
            android:textSize="50px"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="320px">
        <RelativeLayout
            android:id="@+id/rl1"
            android:background="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话客服"
                android:textColor="#060606"
                android:textSize="50px"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/service_qq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="10dp"
                android:src="@drawable/chat_go"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"

                />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="50px"
                android:layout_toLeftOf="@+id/service_qq"
                android:layout_marginRight="6dp"
                android:text="0531-88881234"
                />
            <View
                android:id="@+id/setting_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/phone"
                android:background="#eef2ee"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                />

        </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl2"
          android:layout_below="@+id/rl1"
          android:background="@drawable/bg"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="QQ客服"
              android:textColor="#060606"
              android:textSize="50px"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="10dp"
              />
          <ImageView
              android:id="@+id/service_phone"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:padding="10dp"
              android:src="@drawable/chat_go"
              android:layout_alignParentRight="true"
              android:layout_marginTop="15dp"
              android:layout_marginRight="10dp"
              />
          <TextView
              android:id="@+id/qq"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1772568231"
              android:textSize="50px"
              android:layout_marginTop="20dp"
              android:layout_toLeftOf="@+id/service_phone"
              android:layout_marginRight="10dp"
              />
      </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
