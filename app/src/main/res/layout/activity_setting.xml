<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef2ee"
    android:orientation="vertical"
    tools:context="com.erze.yqj.moudle.user.setting.SettingActivity">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="120px">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@mipmap/back"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="50px"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="240px">
        <RelativeLayout
            android:id="@+id/rl1"
            android:background="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号管理"
                android:textColor="#060606"
                android:textSize="50px"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/setting_username"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/chat_go"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"

                />
            <ImageView
                android:id="@+id/setting_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/setting_username"
                android:src="@mipmap/z6"
                android:layout_marginRight="6dp"
                />


        </RelativeLayout>

        <View
            android:id="@+id/setting_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl1"
            android:background="#eef2ee"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            />
        <RelativeLayout
            android:id="@+id/rl2"
            android:background="@drawable/bg"
            android:layout_below="@+id/setting_line1"
            android:layout_width="match_parent"
            android:layout_height="110px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定手机"
                android:textColor="#060606"
                android:textSize="50px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <ImageView
                android:id="@+id/setting_phone"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/chat_go"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="157******123"
                android:textSize="50px"
                android:layout_toLeftOf="@+id/setting_phone"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="430px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息提示音"
            android:textColor="#060606"
            android:textSize="50px"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            />
        <com.suke.widget.SwitchButton
            android:id="@+id/switch_button_msg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="100px"/>
        <View
            android:id="@+id/setting_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/switch_button_msg"
            android:background="#eef2ee"
            android:layout_marginTop="30px"
            android:layout_marginLeft="18dp"
            />
        <TextView
            android:layout_below="@+id/setting_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示音类型"
            android:textColor="#060606"
            android:textSize="50px"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/setting_tsy"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:src="@drawable/chat_go"
            android:layout_below="@+id/setting_line2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认经典"
            android:textSize="50px"
            android:textColor="#747474"
            android:layout_below="@+id/setting_line2"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/setting_tsy"
            android:layout_marginRight="5dp"
            />
        <View
            android:id="@+id/setting_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/setting_tsy"
            android:background="#eef2ee"
            android:layout_marginTop="60px"
            android:layout_marginLeft="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜间防骚扰"
            android:textColor="#060606"
            android:textSize="50px"
            android:layout_below="@+id/setting_line3"
            android:layout_marginTop="30px"
            android:layout_marginLeft="10dp"
            />
        <com.suke.widget.SwitchButton
            android:id="@+id/switch_button_sr"
            android:layout_below="@+id/setting_line3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="100px"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="600px">
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="110px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:layout_marginLeft="10dp"
                android:textColor="#060606"
                android:layout_centerVertical="true"
                android:textSize="50px"/>
            <ImageView
                android:id="@+id/setting_opinion"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/chat_go"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <View
            android:id="@+id/setting_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl3"
            android:background="#eef2ee"
            android:layout_marginLeft="18dp"
            />
        <RelativeLayout
            android:id="@+id/rl4"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/setting_line4"
            android:layout_width="match_parent"
            android:layout_height="110px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="#060606"
                android:textSize="50px"/>
            <ImageView
                android:id="@+id/setting_cache"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/chat_go"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>

        <View
            android:id="@+id/setting_line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl4"
            android:background="#eef2ee"
            android:layout_marginLeft="18dp"
            />
        <RelativeLayout
            android:id="@+id/rl5"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/setting_line5"
            android:layout_width="match_parent"
            android:layout_height="110px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系客服"
                android:layout_marginLeft="10dp"
                android:textColor="#060606"
                android:layout_centerVertical="true"
                android:textSize="50px"/>
            <ImageView
                android:id="@+id/setting_service"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/chat_go"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>

        <View
            android:id="@+id/setting_line6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl5"
            android:background="#eef2ee"
            android:layout_marginLeft="18dp"
            />
        <RelativeLayout
            android:id="@+id/rl6"
            android:background="@drawable/bg"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/setting_line6"
            android:layout_width="match_parent"
            android:layout_height="110px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#060606"
                android:textSize="50px"/>
            <ImageView
                android:id="@+id/setting_version"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:src="@drawable/chat_go"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
