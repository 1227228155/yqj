<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.erze.yqj.moudle.user.setting.UpdatePhoneActivity">
    <include layout="@layout/common_title"/>
    <EditText
        android:id="@+id/old_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="输入旧的手机号"
        android:digits="1234567890"
        android:maxLength="11"
        />
    <EditText
        android:id="@+id/update_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="输入新的手机号"
        android:digits="1234567890"
        android:maxLength="11"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/update_yzm"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:hint="输入验证码"
            android:digits="1234567890"
            android:maxLength="6"
            />
        <Button
            android:id="@+id/send_yzm"
            android:layout_toRightOf="@+id/update_yzm"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="发送验证码"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/update_btn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="确定"
        />

</LinearLayout>
