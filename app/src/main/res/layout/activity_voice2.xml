<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#363535">
    <RelativeLayout
        android:id="@+id/voice_rl1"
        android:layout_width="match_parent"
        android:layout_height="200px">
        <ImageView
            android:id="@+id/voice_back_iv"
            android:layout_width="90px"
            android:layout_height="90px"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/voice_back"
            android:layout_centerVertical="true"
            android:onClick="voice_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录音"
            android:textColor="#fff"
            android:textSize="60px"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/voice_upload"
            android:layout_width="120px"
            android:layout_height="120px"
            android:padding="5dp"
            android:text="发布"
            android:textSize="45px"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eef2ee"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/voice_rl2"
        android:layout_width="match_parent"
        android:layout_height="500px">
        <com.erze.yqj.moudle.voice.ui.SpectrumView
            android:id="@+id/spectrumView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#363535"
            app:sv_color="#fff"
            app:sv_space="1dp"
            app:sv_note="2dp"
            app:sv_line="1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/voice_rl3"
        android:layout_width="match_parent"
        android:layout_height="600px">
        <TextView
            android:id="@+id/musictime"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="90px"
            />
        <TextView
            android:id="@+id/voice_bgm_tv"
            android:layout_marginTop="10dp"
            android:text="背景音乐"
            android:layout_below="@+id/musictime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="200px"
            android:layout_height="200px"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/composing"
            android:indeterminateDuration="1000"
            android:indeterminateOnly="true"/>
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textColor="#e85932"
            android:textSize="45px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/voice_main"
        android:layout_width="match_parent"
        android:layout_height="400px">

        <ImageView
            android:id="@+id/voice_record_start"
            android:layout_width="181px"
            android:layout_height="181px"
            android:src="@mipmap/voice_start"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/voice_selector_bgm"
            android:layout_width="122px"
            android:layout_height="122px"
            android:src="@mipmap/selector_music"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/voice_record_start"
            android:layout_marginLeft="30dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/voice_play"
            android:layout_width="122px"
            android:layout_height="122px"
            android:src="@drawable/record_voice_finsh"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/voice_record_start"
            android:layout_marginRight="30dp"
            />
    </RelativeLayout>

</LinearLayout>
