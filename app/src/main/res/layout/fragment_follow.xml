<?xml version="1.0" encoding="utf-8"?>
<com.weavey.loading.lib.LoadingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:isFirstVisible="true"
    android:id="@+id/loading_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eef2ee"
            android:orientation="vertical"
            >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#fff"
                    />
                <com.erze.yqj.moudle.comment.listview.PullUpLoadMoreListView
                    android:id="@+id/follow_listView"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="16px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

</com.weavey.loading.lib.LoadingLayout>