<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="540px"
    android:layout_height="344px"
    android:id="@+id/rl"
    >
    
    <ImageView
        android:id="@+id/iv"
        android:layout_width="135px"
        android:layout_height="92px"
        android:layout_marginTop="68px"
        android:layout_marginLeft="79px"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_below="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39px"
        android:textSize="43px"
        android:textColor="#000"
       android:layout_marginLeft="80px"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:layout_marginTop="30px"
        android:textSize="29px"
        android:textColor="#969696"
        />
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="43px"
        android:layout_height="43px"
        android:layout_marginTop="86px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="73px"
        />
    
    <ImageView
        android:id="@+id/iv2"
        android:layout_width="60px"
        android:layout_height="60px"
        android:src="@drawable/user_vip"
        android:visibility="gone"
        android:layout_toRightOf="@+id/iv"
        android:layout_marginLeft="20px"
        android:layout_marginTop="80px"
        />


</RelativeLayout>