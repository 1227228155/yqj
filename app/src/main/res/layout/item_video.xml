<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/video_ll"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:background="#fff"
    android:weightSum="10"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/play_rl"
        android:layout_width="match_parent"
        android:layout_above="@+id/video_rl"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:transitionName="sharedView"
        >
      <ImageView
          android:id="@+id/image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#262525"
          android:scaleType="fitXY"
          android:layout_alignParentTop="true"
          android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/play_video"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/item_video_eye_img"
            android:layout_width="40px"
            android:layout_height="40px"
            android:scaleType="fitXY"
            android:src="@drawable/eye"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            />
        <TextView
            android:id="@+id/item_video_see_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4396"
            android:textSize="26px"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_video_eye_img"
            android:textColor="#fff"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33px"
            />
        <ImageView
            android:id="@+id/item_video_type"
            android:layout_width="60px"
            android:layout_height="50px"
            android:scaleType="fitXY"
            android:src="@mipmap/type_video"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30px"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_marginTop="16px"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <RelativeLayout
            android:id="@+id/video_rl"
            android:layout_toLeftOf="@+id/rl_more"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_voide_avatar"
                android:layout_marginLeft="40px"
                android:layout_width="120px"
                android:layout_height="120px"
                android:src="@drawable/null_avatar"
                android:layout_centerVertical="true"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/item_video_username"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_voide_avatar"
                android:layout_marginLeft="10px"
                android:text="用户名称"
                android:textSize="36px"
                android:textColor="#4e4e4e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_video_more"
                android:layout_width="63px"
                android:layout_height="33px"
                android:src="@drawable/item_follow_more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                />

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.view.flowlayout.TagFlowLayout
            xmlns:zhy="http://schemas.android.com/tools"
            android:id="@+id/flowlayout"
            android:layout_marginLeft="10px"
            zhy:max_select="0"
            zhy:auto_select_effect="false"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            >
        </com.zhy.view.flowlayout.TagFlowLayout>

    </LinearLayout>
</LinearLayout>