<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/test1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="216px"
                android:layout_height="216px"
                android:scaleType="fitXY"
                android:src="@drawable/popup_music"
                />

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录音"
                android:textColor="#656565"
                android:textSize="40px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="216px"
                android:layout_height="216px"
                android:scaleType="fitXY"
                android:src="@drawable/popup_shot"
                />

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄"
                android:textColor="#656565"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/test3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="216px"
                android:layout_height="216px"
                android:scaleType="fitXY"
                android:src="@drawable/popup_sign"
                />

            <TextView
                android:layout_marginTop="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导入视频"
                android:textColor="#656565"
                android:textSize="40px" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/pop_rl_click"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/pop_iv_img"
            android:layout_width="85px"
            android:layout_height="85px"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@drawable/popup_back" />
    </RelativeLayout>

</RelativeLayout>